from tkinter import *
from tkinter.colorchooser import askcolor

root = Tk()

class Window(Frame):
    DEFAULT_PEN_SIZE = 5.0
    DEFAULT_COLOR = 'black'

    global canvas
    canvas = Canvas(root, width=900, height=500)
    canvas.pack()

    def __init__(self, master=None):
        Frame.__init__(self, master)
        self.master = master

        # widget can take all window
        self.pack(fill=BOTH, expand=1)

        # create button, link it to clickExitButton()
        exitButton = Button(self, text="Exit", command=self.clickExitButton, height=1, width=5)

        # buttons
        saveButton = Button(self, text="Save", height=1, width=5)
        loadButton = Button(self, text="Load", height=1, width=5)
        colorButton = Button(self, text="Color", command=self.chooseColor, height=1, width=5)
        brushButton = Button(self, text="Pen", command=self.paint, height=1, width=5)
        latexButton = Button(self, text="LaTex", height=1, width=5)

        # insert
        insert = ["Insert...", "Image", "Link", "Code", "Sound"]
        variable = StringVar(master)
        variable.set(insert[0])  # default value
        insertButton = OptionMenu(master, variable, *insert)
        insertButton.place(x=150, y=505)

        # text options
        text = ["Text Options...", "Text Color   ", "Text Size    ", "Text Style  "]
        variable = StringVar(master)
        variable.set(text[0])  # default value
        textButton = OptionMenu(master, variable, *text)
        textButton.place(x=230, y=505)

        # slide options
        slide = ["Slide Options...", "New Slide      ", "Number Slides", "Remove Slide"]
        variable = StringVar(master)
        variable.set(slide[0])  # default value
        slideButton = OptionMenu(master, variable, *slide)
        slideButton.place(x=350, y=505)

        # place buttons
        brushButton.place(x=0, y=4)
        colorButton.place(x=50, y=4)
        latexButton.place(x=100, y=4)
        exitButton.place(x=850, y=4)
        saveButton.place(x=800, y=4)
        loadButton.place(x=750, y=4)

    def setup(self):
        self.old_x = None
        self.old_y = None
        self.color = self.DEFAULT_COLOR
        self.eraser_on = False
        self.active_button = self.brushButton

    def clickExitButton(self):
        exit()

    def chooseColor(self):
        global color  # set color to global so it updates in other function
        self.color = askcolor(color=self.color)[1]

    def paint(self, event):
        paint_color = 'white' if self.eraser_on else self.color
        if self.old_x and self.old_y:
            self.c.create_line(self.old_x, self.old_y, event.x, event.y,
                               width=self.line_width, fill=paint_color,
                               capstyle=ROUND, smooth=TRUE, splinesteps=36)
        self.old_x = event.x
        self.old_y = event.y


app = Window(root)

# set window title
root.wm_title("Slides")
root.geometry("900x600")
app.configure(background="grey")

# canvas.create_rectangle(50, 0, 100, 50, fill='red')

# show window
root.mainloop()
